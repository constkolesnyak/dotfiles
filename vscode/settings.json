{
//* MISC

    "security.workspace.trust.untrustedFiles": "open",
    "terminal.external.osxExec": "Warp.app",
    "search.smartCase": true,
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": false,

    //* Code Runner
    "code-runner.enableAppInsights": false,
    "code-runner.executorMap": {
        "python": "python3"
    },
    "code-runner.runInTerminal": true,

    //* Git
    "diffEditor.renderSideBySide": false,
    "gitlens.mode.active": "zen",


//* EDITOR

    "editor.fontSize": 20,
    "editor.lineNumbers": "relative",
    "editor.linkedEditing": true,
    "editor.codeActionsOnSave": {
        "source.addMissingImports": true,
        "source.organizeImports": true
    },

    "editor.inlineSuggest.enabled": true,
    "editor.suggest.insertMode": "replace",

    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 5,

    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.defaultModel": "foldingProviderModel",

    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.autohide": true,
    "editor.minimap.size": "fit",


//* APPEARANCE

    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "none",

    //* Terminal
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.cursorBlinking": true,

    //* Themes
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Winter is Coming (Dark Blue - No Italics)",
    "materialTheme.accent": "Purple",
    "editor.tokenColorCustomizations": {
        "comments": "#8086A2"
    },
    "workbench.colorCustomizations": {
        "foreground": "#C7CCE5",
        "editor.foreground": "#C7CCE5",
        "editor.selectionBackground": "#366B84",
        "quickInput.foreground": "#DBE0F9",
        "descriptionForeground": "#C7CCE5",
        "sideBar.foreground": "#DBE0F9",
        "gitDecoration.ignoredResourceForeground": "#777C95",
        "editorGutter.modifiedBackground": "#4cc4fc",
        "scrollbar.shadow": "#FFFFFF"
    },
    

//* LINT

    "errorLens.enabledDiagnosticLevels": ["error", "warning"],
    
    "cSpell.enableFiletypes": ["properties", "shellscript", "xonsh"],
    "cSpell.userWords": [
        "dotfiles",
        "evalx",
        "keymap",
        "kwargs",
        "restow"
    ],


//* FORMAT

    "prettier.tabWidth": 4,

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    
//* VIM

    //* Emulated plugins
    "vim.easymotion": true,
    "vim.replaceWithRegister": true,
    "vim.vim.surround": true,
    // indent-object and textobj-arguments: true

    //* Misc
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.hlsearch": false,
    "vim.usectrlkeys": false,
    "vim.changeWordIncludesWhitespace": true,
    "vim.timeout": 300,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.foldfix": true,

    //* Insert mode
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],

    //* Normal mode
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "r"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["extension.toggleBool"]
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        {
            "before": ["{"],
            "after": ["{", "z", "z"]
        },
        {
            "before": ["}"],
            "after": ["}", "z", "z"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["U"],
            "after": ["<C-r>"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["f"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["s"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "j", "k"]
        }
    ],

    //* Visual mode
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        {
            "before": ["{"],
            "after": ["{", "z", "z"]
        },
        {
            "before": ["}"],
            "after": ["}", "z", "z"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["n"],
            "after": ["<Esc>"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["f"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["s"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "j", "k"]
        }
    ],

    //* Pending mode
    "vim.operatorPendingModeKeyBindingsNonRecursive": [
        {
            "before": ["n"],
            "after": ["<Esc>"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        }


//* LINES BELLOW ARE AUTOMATICALLY ADDED BY VSCODE
    ],
}
