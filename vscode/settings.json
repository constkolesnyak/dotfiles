{
//* MISC

    "security.workspace.trust.untrustedFiles": "open",
    "terminal.external.osxExec": "Warp.app",
    "search.smartCase": true,
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": false,

    //* Code Runner
    "code-runner.enableAppInsights": false,  // telemetry
    "code-runner.executorMap": {
        "python": "python3"
    },
    "code-runner.runInTerminal": true,

    //* Git
    "git.suggestSmartCommit": false,
    "diffEditor.renderSideBySide": false,
    "gitlens.mode.active": "zen",
    "gitlens.rebaseEditor.ordering": "asc",


//* EDITOR

    "editor.fontSize": 20,
    "editor.lineNumbers": "relative",
    "editor.linkedEditing": true,
    "editor.codeActionsOnSave": {
        "source.addMissingImports": true,
        "source.organizeImports": true
    },

    "editor.inlineSuggest.enabled": true,

    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 5,

    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.defaultModel": "foldingProviderModel",

    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 2,
    "editor.minimap.autohide": true,
    "editor.minimap.size": "fit",


//* APPEARANCE

    "workbench.sideBar.location": "right",
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "none",

    "better-comments.tags": [
        {
            "tag": "fixme",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],

    //* Terminal
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.cursorBlinking": true,

    //* Themes
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Winter is Coming (Dark Blue - No Italics)",
    "materialTheme.accent": "Purple",
    "editor.tokenColorCustomizations": {
        "comments": "#8086A2"
    },
    "workbench.colorCustomizations": {
        "foreground": "#C7CCE5",
        "editor.foreground": "#C7CCE5",
        "editor.selectionBackground": "#366B84",
        "quickInput.foreground": "#DBE0F9",
        "descriptionForeground": "#C7CCE5",
        "sideBar.foreground": "#DBE0F9",
        "gitDecoration.ignoredResourceForeground": "#777C95",
        "editorGutter.modifiedBackground": "#4cc4fc",
        "scrollbar.shadow": "#FFFFFF"
    },


//* LINT

    "errorLens.enabledDiagnosticLevels": ["error", "warning"],

    "cSpell.enableFiletypes": ["properties", "shellscript", "xonsh"],
    "cSpell.userWords": [
        "dotfiles",
        "evalx",
        "keymap",
        "kwargs",
        "Pylance",
        "Pytest",
        "restow"
    ],

    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnusedImport": "warning",
        "reportUnusedExpression": "warning",
        "reportUnusedVariable": "warning"
    },
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.fixAll": ["source.convertImportFormat", "source.unusedImports"],
    "python.analysis.enablePytestSupport": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.callArgumentNames": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.autoImportCompletions": true,


//* FORMAT

    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "black-formatter.args": [
        "--skip-string-normalization",
        "--line-length",
        "100"
    ],
    "isort.args": ["--profile", "black"],

    "prettier.tabWidth": 4,

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },


//* VIM

    //* Emulated plugins
    "vim.easymotion": true,
    "vim.replaceWithRegister": true,
    "vim.vim.surround": true,
    // indent-object and textobj-arguments are enabled as well

    //* Misc
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.hlsearch": false,
    "vim.changeWordIncludesWhitespace": true,
    "vim.timeout": 300,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.foldfix": true,

    //* Insert mode
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],

    //* Normal mode
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["m"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<leader>", "j"],
            "commands": ["editor.toggleFold"]
        },
        {
            "before": ["<leader>", "'"],
            "commands": ["editor.togglequotes"]
        },
        {
            "before": ["<leader>", "r"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["extension.toggleBool"]
        },
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        {
            "before": ["["],
            "after": ["{", "z", "z"]
        },
        {
            "before": ["]"],
            "after": ["}", "z", "z"]
        },
        {
            "before": ["U"],
            "after": ["<C-r>"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["L"],
            "after": ["g", "$"]
        },
        {
            "before": ["H"],
            "after": ["g", "^"]
        },
        {
            "before": ["f"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["s"],
            "after": ["f"]
        },
        {
            "before": ["S"],
            "after": ["F"]
        }
    ],

    //* Visual mode
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        {
            "before": ["["],
            "after": ["{", "z", "z"]
        },
        {
            "before": ["]"],
            "after": ["}", "z", "z"]
        },
        {
            "before": ["m"],
            "after": ["<Esc>"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["L"],
            "after": ["g", "$"]
        },
        {
            "before": ["H"],
            "after": ["g", "^"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["f"],
            "after": ["<leader>", "<leader>", "s"]
        },
        {
            "before": ["s"],
            "after": ["f"]
        },
        {
            "before": ["S"],
            "after": ["F"]
        },
        {
            "before": ["g", "s"],
            "after": ["S"]
        }
    ],

    //* Pending mode
    "vim.operatorPendingModeKeyBindingsNonRecursive": [
        {
            "before": ["m"],
            "after": ["<Esc>"]
        },
        {
            "before": ["L"],
            "after": ["g", "$"]
        },
        {
            "before": ["H"],
            "after": ["g", "^"]
        },
        {
            "before": ["["],
            "after": ["{"]
        },
        {
            "before": ["]"],
            "after": ["}"]
        },
        {
            "before": ["s"],
            "after": ["f"]
        },
        {
            "before": ["S"],
            "after": ["F"]
        }


//* LINES BELLOW ARE AUTOMATICALLY ADDED BY VSCODE
    ],
}
